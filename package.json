{
  "name": "blackjack",
  "version": "1.0.0",
  "description": "Desktop Blackjack game",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/cjhurrell/BlackJack.git"
  },
  "build": {
    "appId": "com.cjhurrell.blackjack",
    "productName": "Blackjack",
    "directories": {
      "output": "dist"
    },
    "win": {
      "target": "nsis",
      "icon": "Cards/Logo.ico"
    },
    "nsis": {
      "oneClick": false,            
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true, 
      "createStartMenuShortcut": true,
      "shortcutName": "Blackjack"
  }
},

  "keywords": [],
  "author": "HACK",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/cjhurrell/BlackJack/issues"
  },
  "homepage": "https://github.com/cjhurrell/BlackJack#readme",
  "dependencies": {
    "electron-updater": "^6.6.2"
  },
  "devDependencies": {
    "electron": "^39.0.0",
    "electron-builder": "^25.1.8"
  },
    "publish": [
      {
        "provider": "github",
        "owner": "cjhurrell",
    "repo": "BlackJack"
      }
    ]
}
